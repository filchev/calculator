{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">

        <h1>Tax</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tax.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ tax.name }}</td>
                </tr>
                <tr>
                    <th>Valuefrom</th>
                    <td>{{ tax.valueFrom }}</td>
                </tr>
                <tr>
                    <th>Valueto</th>
                    <td>{{ tax.valueTo }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('dashboard_taxes_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('dashboard_taxes_edit', { 'id': tax.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
